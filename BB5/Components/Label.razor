@namespace BB5.Components

@if (Content is not null
     || ChildContent is not null)
{
    <label class="@Classes"
           @attributes="Attributes">
        @if (Content is MarkupString markupContent)
        {
            @markupContent
        }
        else
        {
            @Content
        }
        
        @ChildContent
    </label>
}
