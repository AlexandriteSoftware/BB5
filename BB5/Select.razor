@namespace BB5

<select value="@Value"
        @oninput="HandleInputAsync"
        @attributes="@Attributes">
    @if (Options is { } options)
    {
        foreach (var item in options)
        {
            <option value="@item.Value" selected="@item.Selected">
                @item.Text
            </option>
        }
    }

    @ChildContent
</select>