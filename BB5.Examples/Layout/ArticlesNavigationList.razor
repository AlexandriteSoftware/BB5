@using BB5.Docs

@{
    var examples =
        new[]
            {
                "Forms"
            }
            .OrderBy(
                item => item,
                StringComparer.Ordinal)
            .ToList();
    
    var builders =
        new[]
            {
                "Alert",
                "Button",
                "Form",
                "Label",
                "InputDate",
                "InputPassword",
                "InputText",
                "TextArea",
                "Select",
                "Table"
            }
            .OrderBy(
                item => item,
                StringComparer.Ordinal)
            .ToList();
}

<div class="mt-3">
    <p class="lead">Examples</p>
    <div class="list-group list-group-flush">
        @foreach (var name in examples)
        {
            <a href="/Examples/@name" class="list-group-item list-group-item-action">
                @name
            </a>
        }
    </div>
</div>            
<div class="mt-3">
    <p class="lead">Builders</p>
    <div class="list-group list-group-flush">
        @foreach (var name in builders)
        {
            <a href="/Builders/@name" class="list-group-item list-group-item-action">
                @name
            </a>
        }
    </div>
</div>
<div class="mt-3">
    <p class="lead">Components</p>
    <div class="list-group list-group-flush">
        @foreach (var name in Docs.GetComponentNames())
        {
            <a href="/Components/@name" class="list-group-item list-group-item-action">
                @name
            </a>
        }
    </div>
</div>