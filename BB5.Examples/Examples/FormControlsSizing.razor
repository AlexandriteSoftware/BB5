@using BB5.Models
@using BB5.FormComponents

<BB5.Form Object="@Model"
          ModelCreated="@(model =>
                        {
                            if (model.Get("Large") is { } controlModelLarge)
                            {
                                if (controlModelLarge.LabelProperties is { } labelLarge)
                                    labelLarge.Size = ComponentSize.Large;

                                if (controlModelLarge.ControlProperties is InputTextProperties controlLarge)
                                {
                                    controlLarge.Size = ComponentSize.Large;
                                    controlLarge.Placeholder = "Large input";
                                }
                            }
                        })"
          AutoSubmit="@true">
    <ControlsTemplate>
        <ControlsPlaceholder />
    </ControlsTemplate>
</BB5.Form>

@code {
    public class FormControlsSizingFormModel
    {
        public string Large { get; set; } = "";

        [InputTextPlaceholder("Default input")]
        public string Default { get; set; } = "";

        [ComponentSize(ComponentSize.Small)]
        [InputTextPlaceholder("Small input")]
        public string Small { get; set; } = "";
    }
    
    private FormControlsSizingFormModel Model { get; set; } = new();
}