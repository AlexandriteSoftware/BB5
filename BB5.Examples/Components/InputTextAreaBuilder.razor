@using BB5

<div class="row">
    <div class="col-4">
        <Form Object="Properties"
              OnModified="@(() => StateHasChanged())" />
        <ClassBuilder OnClassUpdated="HandleStyleUpdate"/>
    </div>
    <div class="col-8">
        <div class="m-3">
            <BB5.InputTextArea Size="@Properties.Size"
                               Class="@InputTextAreaClass"
                               ReadOnly="@Properties.ReadOnly" />
        </div>
    </div>
</div>