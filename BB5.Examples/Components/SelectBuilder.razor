@using BB5

<div class="row">
    <div class="col-4">
        <Form Object="@EditProperties"
              Submitted="@(ctx => Properties = ctx.Object)"
              AutoSubmit="@true" />
        <ClassBuilder OnClassUpdated="@(value => Class = value)" />
    </div>
    <div class="col-8">
        <div class="m-3">
            @{ var properties =
                   Properties as SelectProperties
                   ?? new(); }
            <Select Class="@Class"
                    Size="@properties.Size"
                    Rows="@properties.Rows"
                    Multiple="@properties.Multiple"
                    Items="@Items" />
        </div>
    </div>
</div>