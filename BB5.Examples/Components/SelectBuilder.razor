@using BB5

<div class="row">
    <div class="col-4">
        <Form Object="Properties"
              Modified="@(() => StateHasChanged())" />
        <ClassBuilder OnClassUpdated="HandleStyleUpdate"/>
    </div>
    <div class="col-8">
        <div class="m-3">
            <Select Class="@SelectClass"
                    Size="@Properties.Size"
                    Rows="@Properties.Rows"
                    Multiple="@Properties.Multiple"
                    Items="@SelectItems" />
        </div>
    </div>
</div>