@using BB5

<div class="row">
    <div class="col-4">
        <Form Object="Properties"
              Modified="@(() => StateHasChanged())" />
        <ClassBuilder OnClassUpdated="HandleStyleUpdate"/>
    </div>
    <div class="col-8">
        <div class="m-3">
            <InputLabel Class="@InputLabelClass"
                        Content="@(
                            Properties.ContentIsMarkup
                                ? (MarkupString)Properties.Content
                                : Properties.Content)" />
            </div>
    </div>
</div>