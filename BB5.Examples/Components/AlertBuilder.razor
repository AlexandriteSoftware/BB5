@using BB5

<div class="row">
    <div class="col-4">
        <Form Object="Properties"
              OnModified="@(() => StateHasChanged())" />
        <ClassBuilder OnClassUpdated="HandleStyleUpdate"/>
    </div>
    <div class="col-8">
        <div class="m-3">
            <Alert Color="@Properties.Color"
                   Class="@AlertClass"
                   Dismissible="@Properties.Dismissible"
                   Content="@(
                            Properties.ContentIsMarkup
                            ? (MarkupString)Properties.Content
                            : Properties.Content)" />
            </div>
    </div>
</div>