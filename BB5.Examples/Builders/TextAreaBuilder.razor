@using BB5
@using BB5.Models

<div class="row">
    <div class="col-4">
        <BB5.Form Object="@EditProperties"
                  Submitted="@(ctx => Properties = ctx.Object)"
                  AutoSubmit="@true" />
        <ClassBuilder OnClassUpdated="@(value => Class = value)" />
    </div>
    <div class="col-8">
        <div class="m-3">
            @{ var properties =
                   Properties as TextAreaProperties
                   ?? new TextAreaProperties(); }
            <BB5.TextArea Size="@properties.Size"
                          Class="@Class"
                          Disabled="@properties.Disabled"
                          ReadOnly="@properties.ReadOnly" />
        </div>
    </div>
</div>